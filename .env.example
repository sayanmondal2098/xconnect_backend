# --- App ---
APP_NAME=XConnect Backend
ENV=dev

# --- Database (SQLite default; can switch to Postgres/MySQL etc) ---
DATABASE_URL=sqlite:///./xconnect.db

# --- JWT ---
# IMPORTANT: set this in real deployments
JWT_SECRET_KEY="Change Me in Prod"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- Secret storage ---
# sqlite (encrypted in DB) or aws (AWS Secrets Manager)
# Process to generate a new key for SQLite secret store encryption:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

SECRET_STORE=sqlite
ENCRYPTION_KEY="EnterYourEncryptionKeyHere"

# For AWS Secrets Manager
AWS_REGION=ap-south-1
AWS_SECRET_PREFIX=xconnect

# Optional: allow CORS from trusted origins
CORS_ALLOW_ORIGINS=*
